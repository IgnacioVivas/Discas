generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Animal {
  id                   String   @id @default(cuid())
  nombre               String
  descripcion          String
  edad                 Int
  genero               String
  tama√±o               String
  tipo                 String
  discapacidad         String?
  castrado             Boolean  @default(false)
  vacunado             Boolean  @default(false)
  desparasitado        Boolean  @default(false)
  ubicacion            String?
  personalidad         String[]
  requisitosDeAdopcion String[]
  imagenCard           String
  fotos                String[]
  publicado            Boolean  @default(false)
  destacado            Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([tipo])
  @@index([discapacidad])
  @@index([publicado])
  @@index([destacado])
  @@index([genero])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  nombre    String?
  password  String
  rol       String   @default("admin")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}